{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "diagnostics": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "baseUrl": "./packages",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "types": ["@dcl/posix", "segment-analytics", "@types/offscreencanvas"],
    "typeRoots": ["./node_modules"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}